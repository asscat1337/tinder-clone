{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "ES2015.Promise"
    ],
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node","express"],
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true
  },
  "exclude": [
    "node_modules"
  ]
}